<?xml version="1.0" encoding="utf-8"?>


<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="413dp"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="413dp"
        android:layout_height="80dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="#A4D5EF">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                app:srcCompat="@drawable/equipos" />

            <TextView
                android:id="@+id/colMarca"
                android:layout_width="190dp"
                android:layout_height="match_parent"

                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/colEditar"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:onClick="clickTablaEditarequipo"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

            <ImageButton
                android:id="@+id/colBorrar"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:onClick="clickTablaBorrarEquipo"
                app:srcCompat="@drawable/borrar" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#6BC4F4">

            <TextView
                android:id="@+id/colModelo"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/colSerie"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/colEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="TextView" />
        </TableRow>

    </TableLayout>


</TableRow>
